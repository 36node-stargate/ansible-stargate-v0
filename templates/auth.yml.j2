---
apiVersion: v1
kind: Service
metadata:
  name: auth
  labels:
    app: auth
spec:
  type: ClusterIP
  ports:
    - name: http
      port: 80
      targetPort: 80
  selector:
    app: auth
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: auth
  labels:
    app: auth
spec:
  replicas: 1
  selector:
    matchLabels:
      app: auth
  minReadySeconds: 10
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
  template:
    metadata:
      labels:
        app: auth
    spec:
      restartPolicy: Always
      containers:
        - name: auth
          image: "{{ auth_image }}"
          env:
            - name: DEPLOY_TIME
              value: "{{ auth_time }}"
            - name: APP_PORT
              value: "{{ core_port }}"
            - name: APP_BASE
              value: "{{ core_port }}"
            - name: APP_MONGODB_CONNECTION
              value: "{{ core_port }}"
            - name: APP_SUPER_USERNAME
              value: "{{ auth_super_username }}"
            - name: APP_SUPER_PASSWORD
              value: "{{ auth_super_password }}"
          ports:
            - name: http
              containerPort: 80